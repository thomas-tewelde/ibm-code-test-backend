{
  "name": "@ibm-portal/backend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "config": {
    "com": "ibm",
    "app": "backend"
  },
  "main": "dist/server",
  "scripts": {
    "build": "npm run build:src",
    "build:src": "tsc --project src --watch",
    "clean:dist": "rimraf dist",
    "image": "docker build --tag ${npm_package_config_com}/${npm_package_config_app}:${npm_package_version} --build-arg=COM=${npm_package_config_com} --build-arg=APP=${npm_package_config_app} .",
    "script:add-user": "cd dist && node scripts/add-user",
    "start": "cd dist && node server",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "tslint src/**/*.ts spec/**/*.ts",
    "prebuild:src": "npm run clean:dist",
    "preimage": "npm run build:src",
    "pretest:unit": "npm run build:src",
    "restart": "rimraf dist && rimraf node_modules && npm i"
  },
  "dependencies": {
    "ajv": "^8.2.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "commander": "^7.2.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "express-json-validator-middleware": "^2.1.1",
    "inquirer": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2",
    "sequelize-typescript": "^2.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/config": "0.0.38",
    "@types/cors": "^2.8.10",
    "@types/debug": "4.1.5",
    "@types/express": "^4.17.11",
    "@types/inquirer": "7.3.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.2",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "cross-env": "^7.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --config .prettierrc.yaml --write 'src/**/*.ts'",
        "git add",
        "npm run test:lint"
      ]
    },
    "concurrent": false
  }
}
